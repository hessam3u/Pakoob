<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/colorGreyVeryLight"
        android:padding="@dimen/leftrightMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        style="@style/label_xl"
        android:gravity="center_vertical"
        android:text="@string/lblGetDiscount_Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/leftrightMargin"
        android:background="@color/colorWhite"
        android:orientation="vertical">
    <TextView
        style="@style/label_l"
        android:layout_marginBottom="@dimen/leftrightMargin"
        android:gravity="center_vertical"
        android:text="@string/lblGetDiscount_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </TextView>

        <!--    <Spinner-->
<!--        style="@style/label"-->
<!--        android:id="@+id/cmbPositionFormats"-->
<!--        android:layout_width="match_parent"-->
<!--        android:textAlignment="textEnd"-->
<!--        android:layout_height="50dp" />-->

    <LinearLayout
        android:layoutDirection="ltr"
        android:textDirection="ltr"
        android:id="@+id/divDDMMSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <LinearLayout
        android:layoutDirection="ltr"
        android:textDirection="ltr"
        android:id="@+id/divUtm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDiscountCode"
                style="@style/EditTextStyleForNormalText"
                android:maxLength="20"
                android:layout_gravity="center"
                android:gravity="center"
                >
            </EditText>

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btnContinue"
                android:layout_marginTop="@dimen/leftrightMargin"
                android:layout_marginBottom="@dimen/leftrightMarginMul2"
                style="@style/label"
                android:text="@string/ContinueWithDot"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_roundcorner_greenfill"
                >
            </TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>