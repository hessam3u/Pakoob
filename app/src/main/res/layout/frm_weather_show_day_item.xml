<?xml version="1.0" encoding="utf-8"?>
<!--One Day-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/liOneDay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@color/wthShowTableHeaders"
            android:id="@+id/lblColDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/label"
            android:gravity="center"
            android:text="سه شنبه\n28 تیر">
        </TextView>
        <!--    Splitor-->
        <LinearLayout android:layout_width="match_parent" android:background="@color/wthShowSplitorDay" android:layout_height="1dp" android:orientation="horizontal" android:id="@+id/liSplitorDate"></LinearLayout>

        <!--Items-->
        <LinearLayout
            android:id="@+id/liInDayItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Item-->

        </LinearLayout>
    </LinearLayout>
<!--    Splitor-->
    <LinearLayout android:layout_width="1dp" android:background="@color/wthShowSplitorDay" android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/liSplitor"></LinearLayout>
</LinearLayout>