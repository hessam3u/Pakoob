<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_gravity="bottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#cccccc"
        >
    </TextView>
<!--    end splitor-->
    <TextView
        android:layout_marginRight="@dimen/leftrightMargin"
        android:layout_marginLeft="@dimen/leftrightMargin"
        style="@style/label"
        android:id="@+id/txtYouAreDesigningRoute"
        android:text="@string/YouAreAddingWaypoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </TextView>
    <!--    end title-->

    <LinearLayout
            android:layout_marginRight="@dimen/leftrightMargin"
            android:layout_marginLeft="@dimen/leftrightMargin"
        android:layout_marginBottom="@dimen/leftrightMargin"
        android:layout_marginTop="@dimen/leftrightMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nameOfWaypoint">
            </TextView>

        <EditText
            android:layout_marginRight="@dimen/leftrightMargin"
            android:singleLine="true"
            android:id="@+id/txtNameOfWaypoint"
            android:background="@drawable/bg_roundcorner_greenborder"
            style="@style/label"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:gravity="center"></EditText>
        </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/leftrightMargin"
        android:layout_marginLeft="@dimen/leftrightMargin"
        android:layout_marginBottom="@dimen/leftrightMargin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/LocationOfWaypoint"></TextView>

        <TextView
            android:id="@+id/txtLocationOfWaypoint"
            android:layout_marginRight="@dimen/leftrightMargin"
            style="@style/label"
            android:background="@drawable/bg_roundcorner_greenborder"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""></TextView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/leftrightMargin"
            android:layout_marginLeft="@dimen/leftrightMargin"
            android:gravity="right"
            android:textDirection="rtl"
            android:orientation="horizontal">

            <TextView
                style="@style/label"
                android:id="@+id/btnSaveWaypoint"
                android:layout_marginRight="@dimen/leftrightMargin"
                android:layout_marginLeft="@dimen/leftrightMargin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/iransansweb"
                android:textSize="20dp"
                android:text="@string/save"
                android:textAlignment="center"
                android:background="@drawable/bg_roundcorner_greenfill"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat">
            </TextView>
            <TextView
                style="@style/label"
                android:id="@+id/btnGo"
                android:paddingLeft="@dimen/leftrightMargin"
                android:paddingRight="@dimen/leftrightMargin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/iransansweb"
                android:textSize="20dp"
                android:text="@string/btnGo"
                android:textAlignment="center"
                android:background="@drawable/bg_roundcorner_greenborder"
                android:gravity="center_horizontal|center_vertical"
                tools:ignore="RtlCompat">
            </TextView>
            <TextView
            android:layout_marginRight="@dimen/leftrightMargin"
            style="@style/label"
            android:id="@+id/btnDeleteWaypoint"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textColor="#777777"
            android:fontFamily="@font/iransansweb"
            android:textSize="20dp"
            android:text="@string/btnDelete"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat">
        </TextView>
            <TextView
                android:layout_marginRight="@dimen/leftrightMargin"
                android:layout_marginLeft="@dimen/leftrightMargin"
                style="@style/label"
                android:id="@+id/btnDiscardWaypoint"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textColor="#777777"
                android:fontFamily="@font/iransansweb"
                android:textSize="20dp"
                android:text="@string/discard"
                android:textAlignment="center"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat">
            </TextView>

        </LinearLayout>

    </LinearLayout>