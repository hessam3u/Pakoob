<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:textDirection="rtl"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lblTitle_Container"
        android:padding="@dimen/leftrightMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lblTitle"
        style="@style/label_xl"
        android:gravity="center_vertical"
        android:text="----"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/leftrightMargin"
        android:background="@color/colorWhite"
        android:orientation="vertical">
    <TextView
        android:id="@+id/lblDesc"
        style="@style/label"
        android:layout_marginBottom="@dimen/leftrightMargin"
        android:gravity="center_vertical"
        android:text="--------"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="@dimen/leftrightMargin"
        android:background="@drawable/bg_roundcorner_gray"
        android:orientation="vertical">
        <TextView
            android:text="1400/03/23"
            android:gravity="center"
            android:id="@+id/txtSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/label_l"
            android:letterSpacing=".4"
            android:layout_margin="@dimen/leftrightMargin"
            android:padding="@dimen/leftrightMargin"></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <NumberPicker
                android:id="@+id/txtDay"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </NumberPicker>
            <NumberPicker
                android:id="@+id/txtMonth"
                android:layout_marginLeft="@dimen/leftrightMargin"
                android:layout_marginRight="@dimen/leftrightMargin"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </NumberPicker><NumberPicker
            android:id="@+id/txtYear"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </NumberPicker>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btnAccept"
                android:layout_marginTop="@dimen/leftrightMargin"
                android:layout_marginLeft="@dimen/leftrightMargin"
                style="@style/label"
                android:text="@string/btnAccept"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_roundcorner_greenfill"
                >
            </TextView>
            <TextView
                android:id="@+id/btnCancel"
                android:layout_marginTop="@dimen/leftrightMargin"
                android:layout_marginLeft="@dimen/leftrightMargin"
                style="@style/label"
                android:text="@string/btnCancel"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/colorGrey"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>